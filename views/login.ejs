<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .valid-feedback {
            display: none;
            color: green;
        }

        .invalid-feedback {
            display: none;
            color: red;
        }

        input.valid {
            border-color: green;
        }

        input.invalid {
            border-color: red;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-lg p-4">
                    <h2 class="text-center mb-4">Login</h2>
                    <form id="loginForm" method="POST" action="/users/login">
                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input placeholder="Enter email" type="email" class="form-control" name="email" required>
                            <div class="valid-feedback">✅ Valid email!</div>
                            <div class="invalid-feedback">Please enter a valid email.</div>
                        </div>
                        <!-- Password -->
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" placeholder="Enter Password" name="password"
                                required>
                            <div class="valid-feedback">✅ Looks good!</div>
                            <div class="invalid-feedback">Password must be at least 5 characters.</div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                        <div class="text-center mt-3">
                            <a href="/users/forgot-password">Forgot Password?</a>
                        </div>
                    </form>

                    <div id="message" class="mt-3 text-center"></div>
                    <p class="text-center mt-3">Don't have an account? <a href="/users/register">Register</a></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById("loginForm");
        const inputs = form.querySelectorAll("input");
        const messageBox = document.getElementById("message");

        // Client-side validation
        function validateInput(input) {
            let isValid = false;
            const value = input.value.trim();

            switch (input.name) {
                case 'email':
                    isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
                    break;
                case 'password':
                    isValid = value.length >= 5;
                    break;
            }

            if (isValid) {
                input.classList.add("valid");
                input.classList.remove("invalid");
                input.nextElementSibling.style.display = "block"; // show valid-feedback
                input.nextElementSibling.nextElementSibling.style.display = "none"; // hide invalid-feedback
            }
            // if (res.ok) {
            //     messageBox.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
            //     setTimeout(() => { window.location.href = "/users/home"; }, 1000); // ✅ now it loads EJS
            // }

            else {
                input.classList.add("invalid");
                input.classList.remove("valid");
                input.nextElementSibling.style.display = "none"; // hide valid-feedback
                input.nextElementSibling.nextElementSibling.style.display = "block"; // show invalid-feedback
            }

            return isValid;
        }

        inputs.forEach(input => input.addEventListener("input", () => validateInput(input)));

        // AJAX form submit
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            let allValid = true;
            inputs.forEach(input => { if (!validateInput(input)) allValid = false; });
            if (!allValid) return;

            const formData = {
                email: form.email.value,
                password: form.password.value
            };

            try {
                const res = await fetch("/users/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    "Accept": "application/json",
                    body: JSON.stringify(formData)
                });

                const data = await res.json();

                if (res.ok) {
                    messageBox.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
                    setTimeout(() => { window.location.href = "/users/home"; }, 1000); // Redirect to home.ejs
                } else {
                    messageBox.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
                }
            }
